    container Panel(Panel_Mini_Map_Game)
    {
      metrics_mode pixels
      left 5
      top 5
      width 190
      height 160
      horz_align left
      vert_align top
    }

  }

  container Panel(Panel_Time_Game)
  {
    metrics_mode pixels
    left 10
    top 10
    width 150
    height 100
    horz_align left
    vert_align top
    material Game/Time

    element TextArea(txtTiempo) : Plantillas/Tiempo
    {
      top 35
      left 10
    }
  }

  container Panel(Panel_Hostages_Game)
  {
    metrics_mode pixels
    left 170
    top 10
    width 150
    height 100
    horz_align left
    vert_align top
    material Game/Hostages

    element TextArea(txtHostages) : Plantillas/Tiempo
    {
      top 35
      left -5
      horz_align center
    }

  }

}

