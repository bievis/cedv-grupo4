GUI_Game
{
  zorder 650

  container Panel(Panel_Hero_Game)
  {
    metrics_mode pixels
    left 10
    top -110
    width 250
    height 100
    horz_align left
    vert_align bottom
    material Game/Recuadro

    container Panel(Panel_Face_Hero_Game)
    {
      metrics_mode pixels
      left 10
      top 10
      width 90
      height 80
      horz_align left
      vert_align top
      material Game/Face
    }

    container Panel(Panel_Life_Hero_Game)
    {
      metrics_mode pixels
      left 108
      top 65
      width 130
      height 24
      horz_align left
      vert_align top
      material Game/Life4
    }

  }

  container Panel(Panel_Mini_Map_Border_Game)
  {
    metrics_mode pixels
    left -210
    top 10
    width 200
    height 170
    horz_align right
    vert_align top
