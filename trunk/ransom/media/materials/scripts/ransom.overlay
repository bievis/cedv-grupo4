template element TextArea(Plantillas/Tiempo)
{
    font_name DS_DIGIT
                metrics_mode pixels
                char_height 64
                colour 1.0 1.0 0.0
}

template element TextArea(Plantillas/HighScores)
{
    font_name DS_DIGIT
                metrics_mode pixels
                char_height 36
                colour 1.0 1.0 0.0
}

Background_Menu
{
  zorder 0

  container Panel(Panel_Background_Menu)
  {
    metrics_mode pixels
		top 0
		left 0
    width 1024
    height 768
    horz_align left
    vert_align top
    material Menu/Background
  }
}

