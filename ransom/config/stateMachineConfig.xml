<?xml version="1.0"?>
<config>

  <StateMachine default="Watching">

    <!-- Defined states in the state machine -->
    <States>

      <!-- Estado de vigilancia -->
      <State name="Watching">
        <Actions>
          <Action name="walk_in_route" />
        </Actions>
      </State>

      <!-- Estado de avistamiento aun sin disparo -->
      <State name="Alert">
        <Actions>
          <Action name="stop_move" />
        </Actions>
      </State>

      <!-- Estado de enfrentamiento con disparos -->
      <State name="Shooting">
        <Actions>
          <Action name="shoot" />
        </Actions>
      </State>

      <!-- Estado de persecuciÃ³n -->
      <State name="Chasing">
        <Actions>
<!--          <Action name="run_to" />-->
          <Action name="watch_around" />
        </Actions>
      </State>

    </States>

  </StateMachine>

</config>
